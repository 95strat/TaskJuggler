project test "Test" "1.0" 2009-02-04 +4m

macro FixStart [ minstart ${1} maxstart ${1} ]
macro FixEnd [ minend ${1} maxend ${1} ]

resource r1 "Resource 1"
resource r2 "Resource 2"
resource r3 "Resource 3"
resource r4 "Resource 4"

task ms1 "Milestone 1" {
  ${FixStart "${projectstart}"}
  milestone
}

task ms2 "Milestone 2" {
  milestone
  scheduling alap
  ${FixEnd "${projectend}"}
}

task p1 "Parent Tasks" {
  task only_s_e "Only start or end dates" {
    task t1 "Task 1" {
      ${FixStart "${projectstart}"}
      ${FixEnd "${projectstart}"}
    }
    task t2 "Task 2" {
      start 2009-02-06
      # This is an implicit milestone
      ${FixStart "2009-02-06"}
      ${FixEnd "2009-02-06"}
    }
    task t3 "Task 3" {
      end 2009-03-01
      # This is an implicit milestone
      ${FixStart "2009-03-01"}
      ${FixEnd "2009-03-01"}
    }
  }
  task ms "Milestones" {
    task t1 "Task 1" {
      milestone
      ${FixStart "${projectstart}"}
      ${FixEnd "${projectstart}"}
    }
    task t2 "Task 2" {
      milestone
      scheduling alap
      ${FixStart "${projectend}"}
      ${FixEnd "${projectend}"}
    }
    task t3 "Task 3" {
      start 2009-02-06
      milestone
      ${FixStart "2009-02-06"}
      ${FixEnd "2009-02-06"}
    }
    task t4 "Task 4" {
      end 2009-03-01
      milestone
      ${FixStart "2009-03-01"}
      ${FixEnd "2009-03-01"}
    }
    task t5 "Task 5" {
      start 2009-02-06
      depends ms1
      ${FixStart "2009-02-06"}
      ${FixEnd "2009-02-06"}
    }
    task t6 "Task 6" {
      end 2009-03-01
      precedes ms2
      ${FixStart "2009-03-01"}
      ${FixEnd "2009-03-01"}
    }
  }
  task w_effort "With effort" {
    task t1 "Task 1" {
      allocate r1
      effort 20d
      scheduling asap
      ${FixStart "2009-02-04-09:00"}
      ${FixEnd "2009-03-03-18:00"}
    }
    task t2 "Task 2" {
      start 2009-02-06
      effort 20d
      scheduling asap
      allocate r2
      ${FixStart "2009-02-06-09:00"}
      ${FixEnd "2009-03-05-18:00"}
    }
    task t3 "Task 3" {
      effort 20d
      allocate r3
      scheduling alap
      ${FixStart "2009-05-08-17:00"}
      ${FixEnd "${projectend}"}
    }
    task t4 "Task 4" {
      end 2009-05-01
      scheduling alap
      effort 20d
      allocate r4
      ${FixStart "2009-04-03-09:00"}
      ${FixEnd "2009-04-30-18:00"}
    }
  }
}

task p2 "Parent Tasks 2" {
  task t1 "Task1" {
  }
  task t2 "Task2" {
    depends !t1
  }
  task t3 "Task3" {
    scheduling alap
  }
  task t4 "Task4" {
    precedes !t3
  }
}

taskreport inherit "InheritStartEnd" {
  formats html
	columns name, id, start, end, chart
}
  
