#! /bin/bash

function cleanup
{
  /bin/rm -rf timesheets.log acceptable_intervals \
              TimeSheets TimeSheetTemplates \
	      sender.log receiver.log
  killall -9 tj3 2> /dev/null
} 

function error
{
  echo "ERROR: $1"
  exit 1
}

cleanup
tj3 -s project.tjp &
# Wait some time so tj3 can go into server mode.
sleep 5 

# Run a sender test.
tj3ts_sender --dryrun -e 2002-03-01 > sender.log || error "sender"
# Run a receiver test
tj3ts_receiver --dryrun < dev2_mail1 >> receiver.log || error "rec1"
tj3ts_receiver --dryrun < dev2_mail2 >> receiver.log || error "rec2"

if test `fgrep ERROR timesheets.log | wc -l` != 0 ; then
  error "ERROR: Something went wrong!"
fi  
if test `fgrep WARN timesheets.log | wc -l` != 1 ; then
  error "ERROR: Warnings don't match!"
fi  
if test `fgrep INFO timesheets.log | wc -l` != 29 ; then
  error "ERROR: Info messages don't match!"
fi  
if test `fgrep 'Your weekly report template' timesheets.log | wc -l` != 6 ; then
  error "ERROR: Wrong number of emails send out!"
fi  

cleanup
exit 0
